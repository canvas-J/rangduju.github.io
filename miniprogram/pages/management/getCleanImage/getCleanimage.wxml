<!--miniprogram/pages/getCleanImage/getCleanimage.wxml-->
<!-- 列表 -->
<view class="weui-search-bar">
  <view class="weui-search-bar__form">
    <view class="weui-search-bar__box">
      <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
      <input type="text" class="weui-search-bar__input" placeholder="搜索 共 {{totalOrderNum}} 个保洁订单" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" bindconfirm="search" />
      <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
        <icon type="clear" size="14"></icon>
      </view>
    </view>
    <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
      <icon class="weui-icon-search" type="search" size="14"></icon>
      <view class="weui-search-bar__text"> 搜索 共 {{totalOrderNum}} 个保洁订单</view>
    </label>
  </view>
  <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInputReload">返回</view>
</view>
<view wx:if="{{dataListBefore.length == 0 && dataListAfter.length==0}}" class="page__hd">
  <view class="page__desc">暂无数据</view>
</view>

<view class="weui-cells__title" wx:if="{{dataListBefore.length != 0}}" style="text-align:center"> 清洁前照片 </view>

<block wx:for="{{dataListBefore}}" wx:key="item" wx:for-index="id">
  <view class='item-container'>
    <text class='item-name'>上传人邀请码：{{item.invCode}}</text>
    <text class='item-name'>位置状态：{{item.name}} 清理前</text>
    <text class='item-name'>上传时间：{{item.time}}</text>
    <image class='img' src='{{item.imgUrl}}' data-idx="{{id}}" bindtap="handleImagePreviewIDBefore"></image>
  </view>
</block>

<view class="weui-cells__title" wx:if="{{dataListAfter.length != 0}}" style="text-align:center"> 清洁后照片 </view>



<block wx:for="{{dataListAfter}}" wx:key="item" wx:for-index="id">
  <view class='item-container'>
    <text class='item-name'>上传人邀请码：{{item.invCode}}</text>
    <text class='item-name'>位置状态：{{item.name}} 清理后</text>
    <text class='item-name'>上传时间：{{item.time}}</text>
    <image class='img' src='{{item.imgUrl}}' data-idx="{{id}}" bindtap="handleImagePreviewIDAfter"></image>
  </view>
</block>

<image bindtap='qufabu' class='fabu' src='../../images/fabu.png'></image>